<html>
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js"></script>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.4/Chart.bundle.min.js'></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="stylesheets/student-attendance.css">
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-auto bg-light sticky-top">
                    <div class="d-flex flex-sm-column flex-row flex-nowrap bg-transparent align-items-center sticky-top h-100">
                        <a href="#" class="d-block p-3 text-decoration-none link-dark pb-5" title="Home" data-toggle="tooltip" data-placement="right">
                            <i class="bi-bootstrap fs-1"></i>
                        </a>
                        <ul class="nav nav-pills nav-flush flex-sm-column flex-row flex-nowrap mb-auto mx-auto text-center justify-content-between w-100 px-3 pt-5 mt-5 align-items-center">
                            <li class="nav-item">
                                <a href="/student-home" class="nav-link py-3 px-2" title="Home" data-toggle="tooltip" data-placement="right" >
                                    <i class="bi-house fs-3"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="nav-link py-3 px-2" title="Attendace" data-toggle="tooltip" data-placement="right">
                                    <i class="bi-table fs-3"></i>
                                </a>
                            </li>
                            <li>
                                <a href="/student-announce" class="nav-link py-3 px-2" title="Announcement" data-toggle="tooltip" data-placement="right">
                                    <i class="bi-megaphone fs-3"></i>
                                </a>
                            </li>
                        </ul>
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center justify-content-center p-3 link-dark text-decoration-none dropdown-toggle" id="dropdownUser3" data-toggle="dropdown" aria-expanded="false">
                                <i class="bi-person-circle h2" style="font-size:30px;"></i>
                            </a>
                            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser3">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><a class="dropdown-item" href="/">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-sm p-3 min-vh-100">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="container attendance-bar">
                                <p class="present-label">Present</p> <div class="present-label-shape"></div>
                                <p class="absent-label">Absent</p> <div class="absent-label-shape"></div><br><br>
                                <div class="progress">
                                    <div class="progress-bar bg-danger" role="progressbar" id="prog" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"><%=result.attendance_perc%>%</div>
                                </div>                    
                            </div>
                            <div class="container attendance-table">
                                <table class="table table-hover">
                                    <thead>
                                        <tr class="table table-danger">
                                            <th scope="col">No. of Classes Present</th>
                                            <th scope="col">No. of Classes Absent</th>
                                            <th scope="col">Total no. of Classes</th>
                                        </tr>
                                        <tr>
                                            <td><%=result.present_days%></td>
                                            <td><%=result.absent_days%></td>
                                            <td>10</td>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="right-heading">
                                <p>Check Your Attendance</p>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>        
    </body>
    <script>
        document.getElementById('prog').style.setProperty('width', '<%=result.attendance_perc%>%')
    </script>
</html>